<div id="login">
  <nav class="navbar navbar-default header">
    <div class="container-fluid">
      <div class="navbar-header">
        <a href="#">
          <%= image_tag "users/title_icon_back_normal.png" %>
        </a>
        <a href="#" class="member-login">会员登录</a>
        <a href="#"
          class="pull-right member-register"
          data-toggle="modal"
          data-target="#selectRegisterWay">注册</a>
      </div>
    </div>
  </nav>

  <div class="content">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, placeholder: '请输手机号/邮箱', label: false %>
        <span> <%= image_tag "users/login_icon_user.png" %>   </span>
        <%= f.input :password, required: false, placeholder: '请输入密码', label: false %>
        <span> <%= image_tag "users/login_icon_password.png", class: "password-icon" %>   </span>
        <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "登录" %>
      </div>
      <div class="form-actions forget-password">
        <a href="#" data-toggle="modal" data-target="#forget_password">忘记密码？<a>
      </div>
    <% end %>
    <p class="login-tip">使用一下社交账号快速登录</p>
    <ul class="social-login">
      <li>
        <%= image_tag "users/login_icon_wechat_normal.png" %>
      </li>
      <li>
        <%= image_tag "users/login_icon_qq_normal.png" %>
      </li>
      <li>
        <%= image_tag "users/login_icon_weibo_normal.png" %>
      </li>
    </ul>
  </div>
</div>

<div class="custom-modal modal fade" id="selectRegisterWay" tabindex="-1" role="dialog"
   aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <ul class="list-unstyled">
          <li><a href="/users/registrations/email_new">邮箱注册</a> </li>
          <li> <a href="/users/registrations/telephone_new">手机号注册</a>  </li>
        </ul>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal -->
</div>

<div class="custom-modal modal fade" id="forget_password" tabindex="-1" role="dialog"
   aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <ul class="list-unstyled">
          <li> <a href="#">手机找回密码</a> </li>
          <li> <a href="#">邮箱找回密码</a> </li>
        </ul>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal -->
</div>

<%#= render "users/shared/links" %>

