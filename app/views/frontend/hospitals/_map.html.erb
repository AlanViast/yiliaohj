<script type="text/javascript" src="http://webapi.amap.com/maps?v=1.3&key=<%= Settings.amap.key %>"></script>

<div id="container"></div>

<style type="text/css">
#container {width:300px; height: 280px; }  
</style>

<script>
  var lng = "<%= hospital.location.split(',')[1] %>";
  var lat = "<%= hospital.location.split(',')[0] %>";

  var map = new AMap.Map('container', {
      resizeEnable: true,
      zoom:14,
      center: [lng, lat],
      isHotspot: true
  });

  var marker = new AMap.Marker({
    position: map.getCenter()
  });
  marker.setMap(map);
  
</script>