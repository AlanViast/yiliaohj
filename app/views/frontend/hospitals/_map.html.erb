<script type="text/javascript" src='http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js'></script>
<script type="text/javascript" src="http://webapi.amap.com/maps?v=1.3&key=0495ed2f088bdb55e65dbfa6431dff9c"></script>


<div id="container"></div>

<style type="text/css">
#container {width:300px; height: 180px; }  
</style>

<script>
  var lng = "<%= hospital.location.split(',')[1] %>";
  var lat = "<%= hospital.location.split(',')[0] %>";

  var map = new AMap.Map('container', {
      resizeEnable: true,
      zoom:14,
      center: [lng, lat]
  });

  var marker = new AMap.Marker({
    position: map.getCenter()
  });
  marker.setMap(map);
  
</script>